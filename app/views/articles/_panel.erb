<div class="panel panel-default">
  <div class="panel-body">
  	<h2><%= article.title %></h2>
    <h3><small>Published On: <%= article.date_of_publication%></small></h3>
  	<p><%= article.summary %></p>
  	<div class="btn-group pull-right" role="group">
	  	<%= link_to 'Show', article, class: "btn btn-default" %>
	  </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-xs-5">
        <% if article.author %>
          By <%=article.author.name %>,
        <% end %>
        <%= article.source.name %>
      </div>
      <div class="col-xs-7">
        <% unless article.tag_list.empty? %>
          <% article.tag_list.each do |tag| %>
            <div class="pull-right">
              <button type="button" class="btn btn-default btn-xs"><%= tag %></button>&nbsp;
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
